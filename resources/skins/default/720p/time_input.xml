<?xml version="1.0" encoding="UTF-8"?>
<window>
    <coordinates>
        <left>335</left>
        <top>160</top>
    </coordinates>
    <controls>
        <!-- Dialog Background -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>610</width>
            <height>350</height>
            <texture>DialogBack.png</texture>
        </control>

        <!-- Header -->
        <control type="label">
            <left>20</left>
            <top>20</top>
            <width>570</width>
            <height>30</height>
            <font>font14</font>
            <label>Enter Show Times</label>
            <align>center</align>
        </control>

        <!-- Intro Start -->
        <control type="label">
            <left>20</left>
            <top>70</top>
            <width>200</width>
            <height>30</height>
            <font>font12</font>
            <label>Intro Chapter Number:</label>
        </control>
        <control type="edit" id="1001">
            <left>230</left>
            <top>70</top>
            <width>100</width>
            <height>30</height>
            <font>font12</font>
            <textcolor>white</textcolor>
            <disabledcolor>grey</disabledcolor>
            <align>left</align>
            <aligny>center</aligny>
        </control>

        <!-- Intro Duration -->
        <control type="label">
            <left>20</left>
            <top>120</top>
            <width>200</width>
            <height>30</height>
            <font>font12</font>
            <label>Manual Duration (seconds):</label>
        </control>
        <control type="edit" id="1002">
            <left>230</left>
            <top>120</top>
            <width>100</width>
            <height>30</height>
            <font>font12</font>
            <textcolor>white</textcolor>
            <disabledcolor>grey</disabledcolor>
            <align>left</align>
            <aligny>center</aligny>
        </control>

        <!-- Outro Start (Optional) -->
        <control type="label">
            <left>20</left>
            <top>170</top>
            <width>200</width>
            <height>30</height>
            <font>font12</font>
            <label>Outro Start (Optional):</label>
        </control>
        <control type="edit" id="1003">
            <left>230</left>
            <top>170</top>
            <width>100</width>
            <height>30</height>
            <font>font12</font>
            <textcolor>white</textcolor>
            <disabledcolor>grey</disabledcolor>
            <align>left</align>
            <aligny>center</aligny>
        </control>

        <!-- Help Text -->
        <control type="label">
            <left>20</left>
            <top>220</top>
            <width>570</width>
            <height>30</height>
            <font>font10</font>
            <textcolor>grey</textcolor>
            <label>Note: For chapter-based timing, enter chapter number. For manual timing, enter
                seconds.</label>
            <align>center</align>
        </control>

        <!-- Buttons -->
        <control type="button" id="1005">
            <left>180</left>
            <top>270</top>
            <width>100</width>
            <height>40</height>
            <font>font12</font>
            <label>OK</label>
            <align>center</align>
            <aligny>center</aligny>
            <onleft>1006</onleft>
            <onright>1006</onright>
        </control>
        <control type="button" id="1006">
            <left>330</left>
            <top>270</top>
            <width>100</width>
            <height>40</height>
            <font>font12</font>
            <label>Cancel</label>
            <align>center</align>
            <aligny>center</aligny>
            <onleft>1005</onleft>
            <onright>1005</onright>
        </control>
    </controls>
</window>